#!/bin/sh
VAR=${CODEBUILD_BUILD_ID}
OLDIFS=$IFS
IFS=":"
set -- $VAR
PROJECT=$1
VERSION_DATE=$(TZ=":America/New_York" date +%Y%m%d_Build%H%M)
PREFIX=""
TARGET=""
ANGULAR_TARGET=""
case "$PROJECT" in
       *_Timeclock)
             PREFIX="mtc"
             TARGET="timeclock"
             ANGULAR_TARGET="timeclock"
                ;;

        *_Staging)
                PREFIX="rc"
                TARGET="staging"
                ANGULAR_TARGET="stage"
                ;;

        *_Production)
                PREFIX="v"
                TARGET="production"
                ANGULAR_TARGET="prod"
                ;;
esac

export TARGET="$TARGET"
export ANGULAR_TARGET="$ANGULAR_TARGET"
export USE_VERSION="$PREFIX$VERSION_DATE"

echo "==> TARGET = $TARGET"
echo "==> ANGULAR_TARGET = $ANGULAR_TARGET"
echo "==> USE_VERSION = $USE_VERSION"
IFS=$OLDIFS
